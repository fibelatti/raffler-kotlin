<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@drawable/background_rounded_rectangle"
    android:elevation="@dimen/elevation_regular"
    android:orientation="vertical"
    android:padding="@dimen/padding_regular">

    <TextView
        android:id="@+id/textViewHintTitle"
        style="@style/AppTheme.Text.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Dismissible hint title" />

    <TextView
        android:id="@+id/textViewHintMessage"
        style="@style/AppTheme.Text.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        tools:text="@tools:sample/lorem" />

    <include layout="@layout/layout_divider" />

    <TextView
        android:id="@+id/textViewButtonDismiss"
        style="@style/AppTheme.TextButton.Hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_dismiss" />
</LinearLayout>
